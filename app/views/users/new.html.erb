<% provide(:title, '注册') %>
<h1>注册</h1>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for(@user, layout: "horizontal" ) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.input :email, label: t('simple_form.signup.email') %>

      <%= f.text_field :mobile, label: "手机号码", class: "required" %>

      <%= f.password_field :password, label: "密码", help: "Must be at least 6 characters long" %>

      <%= f.password_field :password_confirmation, label: "确认密码" %>

      <%= f.text_field :company_name, label: "公司名称" %>

      <%= f.text_field :name, label: "联系人" %>

      <%= f.text_field :qq, label: "QQ号码" %>

      <%= f.text_field :phone, label: "电话号码" %>

      <%= f.text_field :fax, label: "传真号码" %>

      <%= f.text_field :address, label: "收货地址" %>
  </div>
        <%= f.submit "立即注册", class: "btn btn-default btn-primary" %>
    <% end %>

</div>

