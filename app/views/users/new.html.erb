<% provide(:title, t('signup')) %>
<h1><%= yield :title %></h1>

<div class="col-md-6">
  <div class="panel panel-info">
    <div class="panel-heading">Bootstrap: <%= yield :title %></div>
    <div class="panel-body">
      <%= simple_form_for(@user, html: {  class: 'form-horizontal' }  ) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.input :email, label: t('simple_form.labels.signup.email'), placeholder:
              t('simple_form.placeholders.signup.email') %>

        <%= f.input :mobile, label: t('simple_form.labels.signup.mobile'),
            placeholder: t('simple_form.placeholders.signup.mobile'), input_html: { size: 50 } %>

        <%= f.input :password, label: t('simple_form.labels.signup.password'),
              placeholder: t('simple_form.placeholders.signup.password'),
              hint: t('simple_form.hints.signup.password') %>

        <%= f.input :password_confirmation, label: t('simple_form.labels.signup.password_confirmation') %>

        <%= f.input :company_name, label: t('simple_form.labels.signup.company_name') %>

        <%= f.input :name, label: t('simple_form.labels.signup.contactor'), placeholder:
              t('simple_form.placeholders.signup.contactor') %>

        <%= f.input :qq, label: t('simple_form.labels.signup.qq')  %>

        <%= f.input :phone, label: t('simple_form.labels.signup.phone')  %>

        <%= f.input :fax, label: t('simple_form.labels.signup.fax') %>

        <%= f.input :address, label: t('simple_form.labels.signup.address') %>

        <%= f.button :submit, t('simple_form.labels.signup.submit'), class: "btn btn-default btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


