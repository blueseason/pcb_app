<% provide(:title, t('signin')) %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title" ><%= yield :title %></h2>
    <iframe id="tmp_downloadhelper_iframe" style="display: none;"></iframe>
  </div>
  <div class="panel-body">
    <div class="row col-wrap">
      <div class="col-md-4" id="guide"><h3><%= t('signin_label') %></h3>
        <p class="text-ignore"><%=  t('signin_info') %> </p>
      </div>
      <div class="col-md-8 " id="content">
        <div class="panel-body col-md-7 col-md-offset-3">

          <%= simple_form_for(:session, url: sessions_path, html: {  class: 'form-horizontal' }  ) do |f| %>

          <%= f.input :email, label: t('simple_form.labels.signin.email') %>

          <%= f.input :password, label: t('simple_form.labels.signin.password') %>
          <%= f.button :submit, t('simple_form.labels.signin.submit'), class: "btn btn-default btn-primary col-md-2" %>

        <% end %>
          <p><br><%= t('simple_form.labels.signin.not_have_account') %> <%= link_to t('simple_form.labels.signin.ads'), signup_path %></p>
        </div>
      </div>
</div>
