    <div class="row col-wrap">
      <div class="col-md-3" id="guide"><h3><%= t('order_label') %></h3>
        <p class="text-ignore"><%=  t('order_info') %> </p>
      </div>
      <div class="col-md-9" id="content">
        <div class="panel-body col-md-9 ">
             <%= render 'create_form' %>
        </div>
      </div>
    </div>
  </div>
</div>
